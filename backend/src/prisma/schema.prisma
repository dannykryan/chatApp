generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
  
enum UserRole {
  USER
  ADMIN
}

enum FriendRequestStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model User {
  // User role
  role UserRole @default(USER)

  // Public fields
  id                  String   @id @default(uuid())
  username            String   @unique
  firstName           String?
  lastName            String?
  email               String   @unique
  profilePictureUrl   String?
  bio                 String?
  lastOnline          DateTime?
  isOnline            Boolean  @default(false)

  // Private Fields
  createdAt           DateTime @default(now())
  updatedAt           DateTime? @updatedAt

  // Authentication fields
  passwordHash        String

  // Spotify integration fields
  spotifyId           String?  @unique
  spotifyAccessToken  String? // This will be encrypted in the application layer before being stored in the database
  spotifyRefreshToken String? // This will be encrypted in the application layer before being stored in the database
  spotifyDisplayName  String?

  // Relations
  posts                    Post[]
  messages                 Message[]
  sentFriendRequests       FriendRequest[] @relation("SentRequests")
  receivedFriendRequests   FriendRequest[] @relation("ReceivedRequests")
}

model FriendRequest {
  id         String   @id @default(uuid())
  senderId   String
  receiverId String
  status     FriendRequestStatus @default(PENDING)
  createdAt  DateTime @default(now())

  sender   User @relation("SentRequests", fields: [senderId], references: [id])
  receiver User @relation("ReceivedRequests", fields: [receiverId], references: [id])

  @@unique([senderId, receiverId])
}

model Post {
  id        String   @id @default(uuid())
  content   String
  timestamp DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  timestamp DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}